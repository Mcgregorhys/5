{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div style="padding: 80px; margin: 20px; border: 1px solid #ccc; border-radius: 5px;">
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const nettoInput = document.getElementById('product_cenaNetto');
        const vatInput = document.getElementById('product_vat');
        const bruttoInput = document.getElementById('product_cenaBrutto');

        function updateCenaBrutto() {
            const netto = parseFloat(nettoInput.value) || 0;
            const vat = parseFloat(vatInput.value) || 0;
            bruttoInput.value = (netto + (netto * vat / 100)).toFixed(2);
        }

        nettoInput.addEventListener('input', updateCenaBrutto);
        vatInput.addEventListener('input', updateCenaBrutto);
    });
</script>
